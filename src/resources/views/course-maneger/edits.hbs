<div class="mt-4">
    <form method="POST" action="/courses/{{Course._id}}/completed?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="{{Course.name}}">
        </div>
        <div class="form-group">
            <label for="decription">Decription</label>
            <textarea type="text" class="form-control" id="decription" name="decription">{{Course.decription}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">VideoId</label>
            <input type="text" class="form-control" id="videoId" name="videoId" value="{{Course.videoId}}">
        </div>
        <button type="submit" class="btn btn-primary">Update Course</button>
</form>
</div>